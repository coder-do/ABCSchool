<MudGrid>
    <MudItem xs="12" sm="4" md="3">
        <MudCard Elevation="25">
            <MudCardContent>
                <MudStack 
                    AlignItems="AlignItems.Center" 
                    Justify="Justify.Center"
                    Spacing="0"
                    Class="mb-4">
                    <MudAvatar Color="Color.Secondary"
                        Style="height:200px; width:200px;">
                        @FirstLetterOfFirstname
                    </MudAvatar>
                </MudStack>
                <MudText Typo="Typo.h6" Align="Align.Center"> @Firstname @Lastname</MudText>
                <MudText Align="Align.Center">@Email</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="8" md="9">
        <MudForm @ref="_form" Model="@UpdateUserRequest">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText>Profile Details</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" md="6">
                            <MudTextField @bind-Value="@UpdateUserRequest.FirstName" 
                                Variant="Variant.Outlined"
                                Label="Firstname"/>
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudTextField @bind-Value="@UpdateUserRequest.LastName" 
                                Variant="Variant.Outlined"
                                Label="Lastname"/>
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudTextField @bind-Value="@UpdateUserRequest.PhoneNumber" 
                                Variant="Variant.Outlined"
                                Label="Phone Number"/>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
                <MudCardActions Class="pb-4 pl-4">
                    <MudButton Variant="Variant.Filled" 
                        Color="Color.Primary"
                        Size="Size.Small"
                        Class="ml-auto"
                        OnClick="UpdateUserDetailsAsync">Save Changes</MudButton>
                </MudCardActions>
            </MudCard>
        </MudForm>
    </MudItem>
</MudGrid>
