@page "/login"
@layout MainLayout
@attribute [AllowAnonymous]

<MudStack AlignItems="AlignItems.Center" Spacing="2">
    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
        Sign&nbsp;In
    </MudText>
    <MudText Typo="Typo.body2" Align="Align.Center">
        Enter your credentials to get started.
    </MudText>
</MudStack>
<br />
<MudForm @ref="@_form" Model="@_loginRequest">
    <MudGrid>
        <MudItem xs="12">
            <MudTextField @bind-Value="_loginRequest.Tenant" Label="Tenant" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="_loginRequest.UserName" Label="Username/Email" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="_loginRequest.Password"
                          Label="Password"
                          Variant="Variant.Outlined"
                          InputType="@_inputType"
                          Adornment="Adornment.End"
                          AdornmentIcon="@_passwordInputIcon"
                          OnAdornmentClick="TogglePasswordVisibility" />
        </MudItem>
        <MudItem xs="12">
            <MudButton Color="Color.Success"
                       Variant="Variant.Filled"
                       Size="Size.Large"
                       Style="width: 100%"
                       StartIcon="@Icons.Material.Filled.Login"
                       OnClick="SubmitAsync">Sign&nbsp;In</MudButton>
        </MudItem>
        <MudItem xs="12">
            <MudButton Color="Color.Primary"
                       Variant="Variant.Filled"
                       Size="Size.Large"
                       Style="width: 100%"
                       StartIcon="@Icons.Material.Filled.Input"
                       OnClick="FillRootAdminCredentialsDuringDevelopment">Fill&nbsp;Admin&nbsp;Credentials</MudButton>
        </MudItem>
    </MudGrid>
</MudForm>

